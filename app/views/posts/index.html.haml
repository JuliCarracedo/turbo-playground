= turbo_frame_tag 'frame_1', data: { turbo_action: :replace } do
  .mt-4.font-bold.text-xl= 'Frame para Form (turbo_action: :replace)'
  .w-full.border-blue-500.border-2.flex.flex-row.rounded-xl.mt-4.justify-center
    = turbo_frame_tag 'new_post', data: { class: 'w-full', turbo_action: :replace } do
      = render 'presentation'
  .mt-4.font-bold.text-xl= 'Frame para Posts (turbo_action: :prepend)'
  .w-full.border-yellow-500.border-2.flex.flex-col.rounded-xl.mt-4.p-2
    = link_to 'Reload', posts_path, class: 'text-gray-500 hover:underline', data: { turbo_frame: :posts }
    = turbo_frame_tag 'posts', data: { turbo_action: :prepend } do
      - if @posts.present?
        - @posts.each do |post|
          = render 'post', post:
      - else
        .w-full.text-center= 'There are no posts'
