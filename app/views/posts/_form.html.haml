= form_for @post, html: { class: 'p-4 flex flex-col', style: 'width: 40rem;' }, data: { turbo_frame: "new_post" } do |form|
  .w-full.flex.items-center.justify-between.my-2
    = form.text_field :title, placeholder: 'Title', class: 'w-1/3'
    = form.text_field :author, placeholder: 'Author', class: 'w-1/3'
  = form.text_area :content, placeholder: 'Lorem ipsum dolor sit amet...', class: 'w-full'
  .w-full.flex.justify-center.my-2
    = form.submit 'Submit', class: 'bg-blue-700 hover:bg-blue-500 text-white rounded-xl p-4'
